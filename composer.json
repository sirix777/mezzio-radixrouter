{
    "name": "sirix/mezzio-radixrouter",
    "description": "RadixRouter integration for Mezzio",
    "license": "MIT",
    "keywords": [
        "laminas",
        "mezzio",
        "RadixRouter",
        "http",
        "middleware",
        "psr",
        "psr-7"
    ],
    "authors": [
        {
            "name": "Sirix",
            "homepage": "https://github.com/sirix777"
        }
    ],
    "require": {
        "php": "~8.2.0 || ~8.3.0 || ~8.4.0 || ~8.5.0",
        "fig/http-message-util": "^1.1.5",
        "mezzio/mezzio-router": "^4.1",
        "psr/container": "^1.0 || ^2.0",
        "psr/http-message": "^1.0.1 || ^2.0.0",
        "wilaak/radix-router": "^3.5"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8",
        "laminas/laminas-diactoros": "^3.8.0",
        "laminas/laminas-stratigility": "^4.3.0",
        "mikey179/vfsstream": "^1.6.12",
        "phpbench/phpbench": "^1.4",
        "phpunit/phpunit": "^11.5",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Sirix\\Mezzio\\Router\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SirixTest\\Mezzio\\Router\\": "test/"
        }
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        },
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "forward-command": true,
            "target-directory": "tools"
        },
        "laminas": {
            "config-provider": [
                "Sirix\\Mezzio\\Router\\RadixRouter\\ConfigProvider"
            ]
        }
    },
    "scripts": {
        "analyse-deps": "tools/composer-dependency-analyser/vendor/bin/composer-dependency-analyser",
        "bench": "php vendor/bin/phpbench run test/Benchmark --report=default",
        "check": [
            "@cs-check",
            "@rector",
            "@phpstan",
            "@test"
        ],
        "cs-check": "php tools/php-cs-fixer/vendor/bin/php-cs-fixer fix --dry-run -vvv --diff",
        "cs-fix": "php tools/php-cs-fixer/vendor/bin/php-cs-fixer fix -vvv",
        "normalize": "@composer bin composer-normalize normalize --diff ../../composer.json",
        "phpstan": "php tools/phpstan/vendor/bin/phpstan analyse -c phpstan.neon --memory-limit=2G",
        "rector": "php tools/rector/vendor/bin/rector process --dry-run --memory-limit=2G",
        "test": [
            "@test-unit"
        ],
        "test-coverage": "phpunit test/unit --colors=always --coverage-clover clover.xml",
        "test-unit": "php vendor/bin/phpunit --testsuite=unit --testdox"
    }
}
